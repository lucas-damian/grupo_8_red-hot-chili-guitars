	<!-- carrito -->
    <%- include('partials/head') %>
    <!-- /carrito -->
	<body>
		<!-- carrito -->
		<%- include('partials/carrito') %>
		<!-- /carrito -->

		<!-- header -->
		<%- include('partials/header') %>
		<!-- /header -->

		<section class="productos">
			<h2 class="productos-title" id="top"><%= msg %></h2>
			<ul class="productos-container">
				<% productos.forEach(producto => { %>
				<li class="productos-item">
                    <div class="producto-img">
                        <img src="<%= producto.img %> " alt="<%= producto.name %> " class="img--productos">
                    </div>
                    
                    <p class="productos-text">
					<%= producto.nombre %>
                    </p>
                    
                    <p class="productos-text">
                    <%=producto.marca %>
                    </p>
                    
                    <p class="productos-text">
                    <%= producto.tipo %>  
                    </p>
                    
                    <p class="productos-text">
                    <%= producto.color %>
                    </p>

					<p class="productos-text">
						<%= producto.valor %>
						</p>

                    <div class="btns--container">
                        <button class="btn--editar" type="submit">editar</button>
                        <button class="btn--borrar" type="submit">borrar</button>
                    </div>
				</li>
				<% }) %>
			</ul>

            <a href="#top" class="btn--goTop"><i class="fas fa-chevron-circle-up"></i></a>
		</section>

		<!-- footer -->
		<%- include('partials/footer') %>
		<!-- /footer -->
	</body>
</html>
