<%- include('partials/head')  %> 



<body>
	<%- include('partials/header')  %> 

<section class="container-products">
	<ul class="productos-container">
		<% producto.forEach(producto => { %>
		<li class="productos-item">
			<div class="producto-img">
				<img src="/img/instrumentos/<%= producto.categoria %>/<%= producto.img %>"  alt="<%= producto.instrumento %> " class="img--productos">
			</div>
			
			<p class="productos-text">
			<%= producto.instrumento %>
			</p>
	
			<p class="productos-text">
				<%= producto.categoria %>
			</p>
			
			<p class="productos-text">
			<%=producto.marca %>
			</p>
			
			<p class="productos-text">
			<%= producto.tipo %>  
			</p>
			
			<p class="productos-text">
			<%= producto.color %>
			</p>
	
			<p class="productos-text">
				<%= producto.valor %>
				</p>
	
			<div class="btns--container">
	
					<a class="btn--editar" href="/detalle-del-producto/<%= producto.id %> "> + INFO</a> <!-- ARMAR LA RUTA POR GET, SEGUN SU ID -->
	
				<form action="<%= producto.id %>?_method=PUT" method="POST">
					<button class="btn--borrar" type="submit">Agregar al carrito</button>
				</form>
			</div>
		</li>
		<% }) %>
	</ul>
	
</section>

<%- include('partials/footer')  %> 
</body>