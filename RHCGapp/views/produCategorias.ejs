<%- include('partials/head')  %> 



<body>
	<%- include('partials/header')  %> 

<section class="container-products">
	<ul class="productos-container">
		
		<% for(let i = 0; i < categoria.length ; i++ ) { %>
			
			<%	for(let j = 0 ; j < categoria[i].productos.length ; j++) {%>
				
				<li class="productos-item">

					<div class="producto-img">
						<img class="img--productos" src="/img/instrumentos/<%= categoria[i].name %>/" alt="">
					</div>

					<p class="productos-text">
					<%= categoria[i].productos[j].instrument %>
					</p>
			
					<p class="productos-text">
						<%= categoria[i].name %>
					</p>
					
					<p class="productos-text">
					<%=categoria[i].productos[j].mark %>
					</p>
					
					<p class="productos-text">
					<%= categoria[i].productos[j].type %>  
					</p>
					
					<p class="productos-text">
					<%= categoria[i].productos[j].color %>
					</p>
			
					<p class="productos-text">
						<%= categoria[i].productos[j].price %>
					</p>
			
					<div class="btns--container">
			
							<a class="btn--editar" href="/products/detalle-del-producto/<%= categoria[i].productos[j].id %> ">+info!</a> <!-- ARMAR LA RUTA POR GET, SEGUN SU ID -->
			
						<form action="<%= categoria[i].productos[j].id %>?_method=PUT" method="POST">
							<button class="btn--borrar" type="submit">Agregar al carrito</button>
						</form>
					</div>
				</li>
		<%	} %>
		
		<% } %>
	</ul>
	
</section>

<%- include('partials/footer')  %> 
</body>